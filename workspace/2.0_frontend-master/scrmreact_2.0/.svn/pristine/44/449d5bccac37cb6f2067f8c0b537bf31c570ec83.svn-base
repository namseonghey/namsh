.scrm-login-wrap {width:100%; height:100vh; background-color:#eee;}

.scrm-login-wrap .scrm-login {width:700px; height:50%; margin-left: auto; margin-right: auto; top: 25%; background-color:#fff; position: relative;}



.scrm-login .scrm-login-div { position:relative; width: 50%; height: 50%; float:left; background-color: white; min-width: 300px;  min-height: 300px; margin-left: auto; margin-right: auto;}
.scrm-login .scrm-login-img {float: left; width:50%; background: url('../images/login.png'); background-size: cover; height: 100%;}
.scrm-login .scrm-login-div .scrm-login-main { position:relative; text-size-adjust: inherit; text-align: center; line-height: 20vh;}
.scrm-login .scrm-login-div .scrm-login-main h1 {height:3.6vh; line-height: 3.6vh; width: 100%; padding:0; padding-left:4.8vh; margin: 20% 0 10% 15%; font-size: 1.4em;text-align: left; position:relative;}
.scrm-login .scrm-login-div .scrm-login-main h1:before {content: ''; left:0;  width:3.6vh; height:3.6vh; position:absolute;  background-image:url('../images/aiqa_bk.png'); background-repeat: no-repeat; background-position:left top; background-size: cover;}

.scrm-login .scrm-login-div .scrm-login-input { position:relative; width: 70%; margin-top: 1px; left: 15%; background-color: #F8F9FA; border:1px solid #DEE2E6; }
.scrm-login .scrm-login-div .scrm-login-input:before {content: ''; position: absolute; margin-top:1.3vh;margin-left: 1.3vh; display:block; width: 2.4vh; height: 2.4vh; background-image: url('../images/ic-actions-user.png'); background-size: cover;}
.scrm-login .scrm-login-div .scrm-login-input.password {margin-top: 10px;}
.scrm-login .scrm-login-div .scrm-login-input.password:before {background-image: url('../images/ic-security-locked.png');}
.scrm-login .scrm-login-div .scrm-login-input > input[type='password'] {margin-top: 0px;}
.scrm-login .scrm-login-div .scrm-login-input > input[type='text'],
.scrm-login .scrm-login-div .scrm-login-input > input[type='password'] { width: 100%; height: 5vh; background:none; border:none; padding-left:4.4vh; box-sizing: border-box; -moz-box-sizing: border-box; -webkit-box-sizing: border-box;}

.scrm-login .scrm-login-btn-div  {position: relative; width: 70%;  left: 15%}
.scrm-login .scrm-login-btn {position: relative; width: 100%;}
.scrm-login .scrm-login-btn > button { width: 100%; height: 5vh; background: #3B5BDB; border:none; color:#fff; margin-top: 1.5rem; border-radius: 4px;}
.scrm-login .scrm-login-btn2 {text-align: left; margin-top:20px;}
.scrm-login .scrm-login-btn2 > button {border:0; background: none; border-bottom:1px solid #868E96; color:#868E96; padding:2px 0;}

.scrm-pwdinit {position:relative; width: 25%; height: 50%; background-color: white; min-width: 300px;  min-height: 300px; margin-left: auto; margin-right: auto; top: 25%;}


.scrm-login-pop {width:calc(100% - 30px);   margin:30px 15px 0; background-color:#fff;}
.scrm-login-pop .scrm-login-div {}
.scrm-login-pop .scrm-login-div .scrm-login-input{width:98%; margin :0 auto 10px;}
.scrm-login-pop .scrm-login-div .scrm-login-input:after {content: ''; display: block; float: none;clear: both;}
.scrm-login-pop .scrm-login-div .scrm-login-input label {float: left; width:30%; text-align: left; font-size:14px; color: #495057;}
.scrm-login-pop .scrm-login-div .scrm-login-input input {width:70% !important; float: left;}

.scrm-login-pop .scrm-login-btn-div {width: 100%;}  
.scrm-login-pop .scrm-login-btn-div .scrm-login-btn > button {width: 100%; height:30px; border-radius: 2px; background: #3B5BDB; border:none; color:#fff; cursor: pointer;}
.scrm-login-pop .scrm-login-btn-div .scrm-login-btn > button:hover {background-color: #364fc7;}
.scrm-login-pop .scrm-login-btn-div .scrm-login-btn:last-child > button  {border:0; background: none; border:1px solid #e9ecef; color:#495057;  }
.scrm-login-pop .scrm-login-btn-div .scrm-login-btn:last-child > button:hover {background: #f8f9fa;}

.scrm-login-pop .scrm-login-btn-div {margin-top: 1rem;}